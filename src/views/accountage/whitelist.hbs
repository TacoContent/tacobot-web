<div class="container-x mt-4">
  <div class="justify-content-center">
    <div class="row mb-3">
      <div class="col"></div>
      <div class="col">
        {{> search id="search" name="search" placeholder="Search by User ID, Display Name, or Username" }}
      </div>
      <div class="col"></div>
    </div>
    <div class="row mb-3">
      <div class="col d-flex justify-content-center">
        {{> pager this.pager search=this.search }}
      </div>
    </div>
  </div>

  <div class="row">
    {{#if items.length}}
    {{#each items}}
      <div class="col-md-6 mb-4">
        {{> accountage/whitelist/item}}
      </div>
    {{/each}}
    {{else}}
    <div class="col">
      <p class="text-center">No users in whitelist found.</p>
    </div>
    {{/if}}
  </div>

  <div class="d-flex justify-content-center">
  {{> pager this.pager}}
  </div>
</div>

{{!-- Floating Action Button (FAB) for adding new whitelist entry --}}
<button 
  type="button" 
  class="btn btn-primary rounded-circle shadow position-fixed btn-fab"
  aria-label="Add Whitelist Entry"
  data-bs-toggle="modal" 
  data-bs-target="#add-whitelist-entry-modal">
  <i class="fas fa-plus" aria-hidden="true"></i>
</button>

