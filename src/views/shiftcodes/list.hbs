<!-- Shift Codes List Page -->
<div class="container-x mt-4">
  <div class="justify-content-center">
    <div class="row mb-3">
      <div class="col"></div>
      <div class="col">
        {{> search id="search" name="search" placeholder="Search by Game Name/ID, Reward, Code, or Notes" }}
      </div>
      <div class="col"></div>
    </div>
    <div class="row mb-3">
      <div class="col d-flex justify-content-center">
        {{> pager this.pager search=this.search }}
      </div>
    </div>
  </div>

  <div class="row">
  {{#each items}}
      <div class="col-md-6 mb-4">
        {{> shiftcodes/item}}
      </div>
  {{/each}}
  </div>
  <div class="d-flex justify-content-center">
  {{> pager this.pager}}
  </div>
</div>
{{!-- Floating Action Button to submit a new SHiFT Code --}}
<a 
  href="/shiftcodes/submit" 
  class="btn btn-primary rounded-circle shadow position-fixed btn-fab"
  aria-label="Add SHiFT Code"
  title="Add SHiFT Code">
  <i class="fas fa-plus" aria-hidden="true"></i>
</a>

