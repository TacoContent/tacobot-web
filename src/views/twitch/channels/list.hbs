<div class="container mt-4">
  <div class="justify-content-center">
    <div class="row mb-3">
      <div class="col"></div>
      <div class="col">
        {{> search id="search" name="search" placeholder="Search by Twitch Channel" }}
      </div>
      <div class="col"></div>
    </div>
    <div class="row mb-3">
      <div class="col d-flex justify-content-center">
        {{> pager this.pager search=this.search }}
      </div>
    </div>
  </div>
  <table class="table">
    <thead>
      <tr class="table-active">
        <th class="text-uppercase text-start">Guild</th>
        <th class="text-uppercase text-start">Channel</th>
        <th class="text-uppercase text-end"><i class="fas fa-clock" title="Added / Updated"></i></th>
        <th class="text-uppercase"></th>
      </tr>
    </thead>
    <tbody>
      {{#each items}}
      <tr>
        <td class="text-nowrap p-1 text-start">{{> discord/guild id=this.guild_id}}</td>
        <td class="text-nowrap p-1 text-start">{{> twitch/user username=this.channel}}</td>
        <td class="text-nowrap p-1 text-end me-1">{{> date date=this.timestamp unknown="UNKNOWN"}}</td>
        <td class="text-nowrap">
          <a href="/twitch/channels/edit/{{this.guild_id}}/{{this.channel}}" class="btn btn-sm btn-action text-primary" title="Edit"><i class="fas fa-edit"></i></a>
          <a href="/twitch/channels/delete/{{this.guild_id}}/{{this.channel}}" class="btn btn-sm btn-action text-danger" title="Delete"><i class="fas fa-trash"></i></a>
        </td>
      {{/each}}
    </tbody>
  </table>

  <div class="justify-content-center">
    <div class="row mb-3">
      <div class="col d-flex justify-content-center">
        {{> pager this.pager search=this.search }}
      </div>
    </div>
  </div>
</div>
