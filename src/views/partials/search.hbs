<form method="{{#if method}}{{method}}{{else}}GET{{/if}}" action="{{#if action}}{{action}}{{/if}}" class="d-inline search-form">
  <div class="input-group search-group{{#if class}} {{class}}{{/if}}">
    <button type="button" data-submit="form" data-set="#{{id}}" data-value="" data-attr="value" data-event="click" class="btn btn-link btn-sm search-clear" title="Clear Search">
      <i class="fa fa-times" aria-hidden="true"></i>
    </button>
    <input type="text" class="form-control search-input pe-4" id="{{id}}" name="{{name}}" placeholder="{{placeholder}}" value="{{search}}" />
    <button type="submit" class="btn btn-primary btn-sm search-submit" title="Search"><i class="fa fa-search" aria-hidden="true"></i></button>
  </div>
</form>