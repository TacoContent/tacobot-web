<nav aria-label="Page navigation">
<ul class="pagination">
    {{#if (neq currentPage 1)}}
      <li class="page-item"><a class="page-link" href="?page=1">First</a></li>
    {{else}}
      <li class="page-item disabled"><span class="page-link">First</span></li>
    {{/if}}

    {{#if hasPrev}}
      <li class="page-item"><a class="page-link" href="?page={{prevPage}}">Previous</a></li>
    {{else}}
      <li class="page-item disabled"><span class="page-link">Previous</span></li>
    {{/if}}

    {{!-- Show up to 2 pages before current (not first) --}}
    {{#each beforePages}}
      <li class="page-item"><a class="page-link" href="?page={{this}}">{{this}}</a></li>
    {{/each}}

    <li class="page-item active"><span class="page-link">{{currentPage}}</span></li>

    {{!-- Show up to 2 pages after current (not last) --}}
    {{#each afterPages}}
      <li class="page-item"><a class="page-link" href="?page={{this}}">{{this}}</a></li>
    {{/each}}

    {{#if hasNext}}
      <li class="page-item"><a class="page-link" href="?page={{nextPage}}">Next</a></li>
    {{else}}
      <li class="page-item disabled"><span class="page-link">Next</span></li>
    {{/if}}

    {{#if (neq currentPage lastPage)}}
      {{#if (neq lastPage 0)}}
        <li class="page-item"><a class="page-link" href="?page={{lastPage}}">Last</a></li>
      {{else}}
        <li class="page-item disabled"><span class="page-link">Last</span></li>
      {{/if}}
    {{else}}
      <li class="page-item disabled"><span class="page-link">Last</span></li>
    {{/if}}
  </ul>
</nav>