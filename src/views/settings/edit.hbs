{{#with item}}
<div>{{name}}</div>
{{> discord/guild id=guild_id}}
<div>
{{> date date=timestamp unknown="Never Updated"}}
</div>
{{/with}}

<form method="post" action="/settings/save">
  <input type="hidden" name="name" value="{{item.name}}" />
  {{#each item.settings}}
    {{> settings/field data=this key=@key parentKey='' metadata=../item.metadata}}
  {{/each}}
  <button type="submit" class="btn btn-primary">Save</button>
</form>

<hr />

<form method="post" action="/settings/save/raw">
  <input type="hidden" name="name" value="{{item.name}}" />
{{> settings/fields/json value=(json item.settings) label="Raw JSON" id=(concat "settings-raw-" (uuid 's')) name="settings" }}
  <button type="submit" class="btn btn-primary">Save Raw</button>
</form>


